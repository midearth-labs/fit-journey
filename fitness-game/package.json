{
	"name": "fitness-game",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "npm run validate:content && vite build",
		"build-only": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"type-check": "tsc --noEmit",
		"validate:content": "tsx src/lib/server/scripts/validate-content.ts && tsx src/lib/server/scripts/validate-passage-questions.ts",
		"generate:images": "tsx src/lib/server/scripts/gemini-image-generator.ts",
		"ensure:uuids": "tsx src/lib/server/scripts/ensure-unique-uuids.ts $1",
		"validate:uuids": "tsx src/lib/server/scripts/uuid-validator.ts",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:generate:custom-ddl": "drizzle-kit generate --custom --name=custom-ddl",
		"db:generate:custom-dml": "drizzle-kit generate --custom --name=custom-dml"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@google/generative-ai": "^0.24.1",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.544.0",
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node": "^22",
		"@vitest/browser": "^3.2.3",
		"bits-ui": "^2.11.4",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.1",
		"drizzle-kit": "^0.30.2",
		"drizzle-orm": "^0.40.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"layerchart": "^2.0.0-next.27",
		"playwright": "^1.53.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.1",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.20.5",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^7.0.4",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^3.2.3",
		"vitest-browser-svelte": "^0.1.0"
	},
	"dependencies": {
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.57.4",
		"date-fns": "^4.1.0",
		"lucide-svelte": "^0.544.0",
		"marked": "^16.3.0",
		"pg": "^8.16.3",
		"postgres": "^3.4.5",
		"zod": "^4.1.8"
	}
}
